log = /tcantv/logs/pic
log4j.rootLogger = INFO, stdout

log4j.appender.stdout=org.apache.log4j.ConsoleAppender
log4j.appender.stdout.layout=org.apache.log4j.PatternLayout
log4j.appender.stdout.layout.ConversionPattern=%d [%C{1} %L] %-5p %c - %m%n
#para hacer mas explicito la ruta de donde se llama el log
#log4j.appender.stdout.layout.ConversionPattern=%d [%24F:%t:%L] - %m%n

log4j.appender.picLog=org.apache.log4j.FileAppender
log4j.appender.picLog.File=${log}/pic-zte.log
log4j.appender.picLog.layout=org.apache.log4j.PatternLayout
log4j.appender.picLog.layout.ConversionPattern=%d [%C{1} %L] %-5p %c - %m%n
log4j.appender.picLog=org.apache.log4j.rolling.RollingFileAppender
log4j.appender.picLog.RollingPolicy=org.apache.log4j.rolling.TimeBasedRollingPolicy
log4j.appender.picLog.rollingPolicy.ActiveFileName=${log}/pic-zte.log
log4j.appender.picLog.RollingPolicy.FileNamePattern=${log}/pic-zte.log.%d{yyyyMMdd}.gz



log4j.category.picLogger=INFO, picLog
